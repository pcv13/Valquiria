<div id="filterrific_results">



  <table>
    <tr>
       <th><%= filterrific_sorting_link(@filterrific, :name) %></th>
       <th><%= filterrific_sorting_link(@filterrific, :language) %></th>
       <th><%= filterrific_sorting_link(@filterrific, :game) %></th>
       <th><%= filterrific_sorting_link(@filterrific, :registered_at) %></th>
    </tr>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to(match.name, match_path(match)) %></td>
        <td><%= match.language %></td>
        <td><%= match.game.name %></td>
        <td><%= match.created_at %></td>
      </tr>
    <% end %>
  </table>
</div>
